{
	"name": "@mattrossman/react-three",
	"author": "mattrossman",
	"version": "0.1.0",
	"license": "MIT",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start": "tsdx watch",
		"build": "tsdx build",
		"test": "tsdx test --passWithNoTests",
		"lint": "tsdx lint",
		"prepare": "tsdx build",
		"size": "size-limit",
		"analyze": "size-limit --why",
		"storybook": "start-storybook -p 6006 --docs",
		"build-storybook": "build-storybook -s public -o public --docs"
	},
	"peerDependencies": {
		"react": ">=16"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"module": "dist/react-three.esm.js",
	"size-limit": [
		{
			"path": "dist/react-three.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/react-three.esm.js",
			"limit": "10 KB"
		}
	],
	"devDependencies": {
		"@babel/core": "^7.12.13",
		"@size-limit/preset-small-lib": "^4.9.2",
		"@storybook/addon-essentials": "^6.1.17",
		"@storybook/addon-info": "^5.3.21",
		"@storybook/addon-links": "^6.1.17",
		"@storybook/addons": "^6.1.17",
		"@storybook/react": "^6.1.17",
		"@types/react": "^17.0.1",
		"@types/react-dom": "^17.0.0",
		"babel-loader": "^8.2.2",
		"husky": "^5.0.9",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-is": "^17.0.1",
		"react-three-fiber": "^5.3.18",
		"size-limit": "^4.9.2",
		"three": "^0.125.2",
		"tsdx": "^0.14.1",
		"tslib": "^2.1.0",
		"typescript": "^4.1.5"
	}
}
